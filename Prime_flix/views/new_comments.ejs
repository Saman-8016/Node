<%- include("partials/header") %>

<div class="container">
    <h1>Add a Comment Here:</h1>
    <form action="/movies/<%= filmId %>/comments" method="POST">
        <div class="form-group">
            <label for="user">Username:</label>
            <input type="text" name="user" class="form-control" id="user" placeholder="Username" autofocus required>
        </div>
        <div class="form-group">
            <label for="text">Comment Text</label>
            <textarea type="text" name="text" class="form-control" id="text" placeholder="Add your comment here ..." row= "8" col="70" required></textarea>
        </div>
        <input type="hidden" value="<%= filmId %>">
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
    </form>
</div>

<%- include('partials/footer') %>