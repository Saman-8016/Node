<%- include("partials/header") %>

<div class="container">
    <h1>Edit Comment</h1>
    <form action="/movies/<%= film._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="text" class="form-label">Comment text</label>
            <textarea class="form-control" name="text" id="text" cols="70" rows="8" placeholder="comment text here" required> <%= comment.text %></textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Submit comment</button>
    </form>
</div>

<%- include("partials/footer") %>