<%- include("partials/header") %>
    <div class="container">
        <div class="row">
            <div class="col-6 show_image-container mt-2">
                <img src="<%= film.artwork %>" alt="a picture of a a film">
            </div>
            <div class="col-6 mt-2">
                <h1><%= film.name %></h1>
                <p><%= film.description %></p>
                <table class="table">
                    <tbody>
                        <tr>
                        <th scope="row">Name</th>
                        <td><%= film.name %></td>
                        </tr>
                        <tr>
                        <th scope="row">Casts</th>
                        <td><%= film.casts %></td>
                        </tr>
                        <tr>
                        <th scope="row">Release Date:</th>
                        <td><%= film.date %></td>
                        </tr>
                        <tr>
                        <th scope="row">Origin</th>
                        <td><%= film.origin %></td>
                        </tr>
                        <tr>
                        <th scope="row">Genre</th>
                        <td><%= film.genre %></td>
                        </tr>
                    </tbody>
                </table>
                <a href="/movies/<%= film._id %>/edit">
                    <button class="btn btn-outline-primary btn-lg col-12">EDIT</button>
                </a>
                <form action="/movies/<%= film._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-outline-danger btn-lg col-12 mt-2">DELETE</button>
                </form>
            </div>
        </div>
        <div class="row show_comment-header mt-3">
            COMMENT HERE:
        </div>
        <a href="/movies/<%= film._id %>/comments/new">
            <button class="btn btn-success btn-lg my-3">Add Comment</button>
        </a>
        <% comments.forEach((comment) => { %>
            <div class="row show_comment-container py-2 border">
                <div class="col-2 border-end my-auto">
                    <%= comment.user %>
                </div>
                <div class="col-2 border-end my-auto d-flex flex-wrap justify-content-center">
                    <a href="/movies/<%= film._id %>/comments/<%= comment._id %>/edit" class="btn btn-success btn-sm w-75">Edit</a>
                    <form class="w-75 my-1" action="/movies/<%= film._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger btn-sm w-100">Delete</button>
                    </form>
                </div>
                <div class="col-8 my-auto">
                    <%= comment.text %>
                </div>
            </div>
            <div class="py-1"></div>
        <% }) %>
    </div>
<%- include("partials/footer") %>