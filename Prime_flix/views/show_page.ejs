<%- include("partials/header") %>
    <div class="container">
        <div class="row">
            <div class="col-6 show_image-container mt-2">
                <img src="<%= film.artwork %>" alt="a picture of a a film">
            </div>
            <div class="col-6 mt-2">
                <h1><%= film.name %></h1>
                <p><%= film.description %></p>
                <table class="table">
                    <tbody>
                        <tr>
                        <th scope="row">Name</th>
                        <td><%= film.name %></td>
                        </tr>
                        <tr>
                        <th scope="row">Casts</th>
                        <td><%= film.casts %></td>
                        </tr>
                        <tr>
                        <th scope="row">Year:</th>
                        <td><%= film.year %></td>
                        </tr>
                        <tr>
                        <th scope="row">Origin</th>
                        <td><%= film.origin %></td>
                        </tr>
                        <tr>
                        <th scope="row">Genre</th>
                        <td><%= film.genre %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="mt-3">
            COMMENT HERE:
        </div>
        <div class="row py-2">
            <div class="col-3">
                Username
            </div>
            <div class="col-9">
                Write your comment ...
            </div>
        </div>
    </div>
<%- include("partials/footer") %>